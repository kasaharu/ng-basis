{
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "assignees": ["kasaharu"],
  "reviewers": ["kasaharu"],
  "schedule": ["every weekend"],
  "labels": ["renovate"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 3am on the first day of the month"
    ]
  },
  "baseBranches": ["develop"],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "packagePatterns": [
        "prettier",
        "stylelint",
        "stylelint-config-standard",
        "angular-cli-ghpages"
      ],
      "enabled": true
    },
    {
      "packagePatterns": ["circleci/node"],
      "enabled": true
    }
  ]
}
